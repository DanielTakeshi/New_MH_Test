
def normlogrnd(m:Int, n:Int):DMat = {
    val a = dnormrnd(0, 1.4f, m, n);
    a;
};

def newtest(diff:DMat, logu:Double, nsig:Double):(Boolean, Boolean) = {
    val tvar = (variance(diff)/length(diff)).v;
    if (tvar >= 1) {
	if (nsig == 0) throw new RuntimeException("New test failed variance condition");
	(false, false);
    } else {
	val x = mean(diff);
	val xn = dnormrnd(0, math.sqrt(1 - tvar), 1, 1);
	val xc = normlogrnd(1,1);
	if ((x + xn + xc).v > 0) {
	    (true, true);
	} else {
	    (true, false);
	}
    }
};

def oldtest(diff:DMat, logu:Double, nsig:Double):(Boolean, Boolean) = {
    val tstd = sqrt(variance(diff)/length(diff)).v
    val ndiff = mean(diff - logu).v / tstd;
    if (math.abs(ndiff) < nsig) {
	(false, false);
    } else {
	if (ndiff > 0) {
	    (true, true);
	} else {
	    (true, false);
	}
    }
};

def getbatch(data:DMat, here:Int, size:Int):DMat = {
    val there = here + size;
    val nthere = math.min(there, data.ncols);
    val iwrap = math.max(0, there - data.ncols);
    val batch0 = data(?, here->nthere);
    val batch = if (iwrap > 0) {
	batch0 \ data(?, 0->iwrap);
    } else {
	batch0;
    }
    batch;
};    

def dostep(data:DMat, size:Int, here:Int, theta:DMat, ttheta:DMat, nsig:Double, explin:Boolean,
	   evalfn:(DMat,DMat)=>DMat,
	   testfn:(DMat,Double,Double)=>(Boolean,Boolean)):(Int, DMat) = {
    var step = size;
    var done = false;
    var ntheta:DMat = null;
    var there = 0;
    var logu = ln(rand(1,1)).v;
    var nsig0 = nsig;
    while (! done) {
	val batch = getbatch(data, here, step);
	val diff = evalfn(batch, ttheta) - evalfn(batch, theta);
	val (moved, takestep) = testfn(diff, logu, nsig0);
	done = moved;
	if (done) {
	    there = (here + step) % data.ncols;
	    ntheta = if (takestep) ttheta else theta;
	} else {
	    step = math.min(if (explin) (step*2) else (step + size), data.ncols);
	    if (step == data.ncols) nsig0 = 0;
	}
    }
    (there, ntheta);
};

def dosimm(data:DMat, size:Int, nsamps:Int, nsig:Double, explin:Boolean,
	   initfn:() => DMat,
	   proposalfn:(DMat)=>DMat,
	   evalfn:(DMat,DMat)=>DMat,
	   testfn:(DMat,Double,Double)=>(Boolean,Boolean)):(DMat,LMat) = {
    var theta = initfn();
    val samples = dzeros(theta.length, nsamps);
    val sizes = lzeros(1, nsamps);
    var here = 0;
    var i = 0;
    while (i < nsamps) {
	val ttheta = proposalfn(theta);
	val (there, nth) = dostep(data, size, here, theta, ttheta, nsig, explin, evalfn, testfn);
	sizes(i) = if (there > here) (there - here) else (there - here + data.ncols);
	here = there;
	theta = nth;
	samples(?, i) = theta;
	i += 1;
    }
    (samples, sizes);
};

    
abstract class MHmodel(val ndim:Int, val n:Int, val sigma:Double, val pscale:Double, val v:Double) {
    val data:DMat;
    def initfn():DMat;
    def proposalfn(theta:DMat):DMat;
    def evalfn(batch:DMat,theta:DMat):DMat;
};

def newsim(mod:MHmodel, size:Int, nsamps:Int):(DMat, LMat) = {
    dosimm(mod.data, size, nsamps, 1f, false, mod.initfn, mod.proposalfn, mod.evalfn, newtest);
};	       

def oldsim(mod:MHmodel, size:Int, nsamps:Int, nsig:Double):(DMat, LMat) = {
    dosimm(mod.data, size, nsamps, nsig, true, mod.initfn, mod.proposalfn, mod.evalfn, oldtest);
};

class NormModel(ndim:Int, n:Int, sigma:Double, pscale:Double, v:Double) extends MHmodel(ndim, n, sigma, pscale, v) {
    val data = dnormrnd(0, sigma, ndim, n);
    val sigmat = sigma/math.sqrt(n);
    val sigmap = sigmat*pscale*v/math.sqrt(ndim);
    def initfn():DMat = {
	dnormrnd(0, sigmat, ndim, 1);
    };
    def proposalfn(theta:DMat):DMat = {
	theta + dnormrnd(0, sigmap, ndim, 1);
    };
    def evalfn(batch:DMat,theta:DMat):DMat = {
	val dd = batch - theta;
	-(n / (2 * sigma * sigma)) * (dd dot dd);
    };
};

